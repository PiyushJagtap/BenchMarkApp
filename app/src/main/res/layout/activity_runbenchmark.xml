<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RunBenchMark"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rbmtextview1"
        android:text="BenchMark Test"
        android:textSize="15dp"
        android:textColor="#6CC417" />

    <Button
        android:id="@+id/rbmbegin"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:background="@drawable/beginbutton"
        android:elevation="10dp"
        android:onClick="onBeginClick"
        android:text="Begin Sequence"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#6CC417"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/rbmtextview2"
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="#6CC417"
        android:textSize="15dp"
        android:text="Output will go here..."
        android:layout_height="wrap_content" />

</LinearLayout>